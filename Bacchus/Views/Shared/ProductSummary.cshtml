@model Product
@{ 
	string DateId = @Model.BiddingEndDate.ToString( "yyyyMMddHHmmss" );
}

<div id="@DateId" class="card card-outline-primary m-1 p-1">
	<div class="bg-faded p-1">
		<h4>
			@Model.ProductName
			<span class="badge badge-pill badge-primary" style="float:right">
				<small class="countdown">
					<span id=@String.Format("days{0}",@DateId)></span> Day(s)
					<span id=@String.Format("hours{0}",@DateId)></span> Hour(s)
					<span id=@String.Format("minutes{0}",@DateId)></span> Minute(s)
					<span id=@String.Format("seconds{0}",@DateId)></span> Second(s)
				</small>
			</span>
		</h4>
	</div>
	<form id="@Model.ProductId" asp-action="PlaceBid"
		  asp-controller="Bid" method="get">
		<input type="hidden" asp-for="ProductId" />
		<input type="hidden" asp-for="ProductName" />
		<span class="card-text p-1">
			@Model.ProductDescription
			<button type="submit"
					class="btn btn-success btn-sm pull-right" style="float:right">
				Place a bid
			</button>
		</span>
	</form>
</div>
<script>
	(function () {
		countdown("@Model.BiddingEndDate", "@DateId");
	}());
</script>
